<Page x:Class="TaburetkaProject.Notes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaburetkaProject"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Notes">
    <Page.Resources>
        <ContextMenu x:Key="itemMenu">
            <MenuItem Header="Редактировать" Name="EditItem" Click="EditItem_Click"/>
            <MenuItem Header="Открыть фото" Name="OpenImage" Click="OpenImage_Click"/>
            <MenuItem Header="Открыть файл" Name="OpenFile" Click="OpenFile_Click"/>
            <MenuItem Header="Отметить как выполнено" Name="MarkAsDone" Click="MarkAsDone_Click"/>
            <MenuItem Header="Удалить" Name="DeleteItem" Click="DeleteItem_Click"/>
        </ContextMenu>
    </Page.Resources>
    <Border CornerRadius="8" Background="#003B46">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10" Width="auto" Height="auto" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <ListView Background="#003B46" Name="lvToDo" Height="auto" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="650" Grid.Row="1" Grid.ColumnSpan="3" MouseDoubleClick="lvToDo_MouseDoubleClick" 
                          ContextMenu="{StaticResource itemMenu}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="Описание:" FontWeight="Bold"/>
                                    <TextBlock Name="Description" Text="{Binding Description}"/>
                                    <TextBlock Text="Изображение:" FontWeight="Bold"/>
                                    <TextBlock Name="Image" Text="{Binding ImageSource}"/>
                                    <TextBlock Text="Файл:" FontWeight="Bold"/>
                                    <TextBlock Name="File" Text="{Binding FileSource}"/>
                                    <TextBlock Name="IsDone" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Right" Text="{Binding IsDone}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <CheckBox x:Name="chkShowNotDone" Content="Показать невыполненные задачи" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Checked="chkShowNotDone_Checked" Unchecked="chkShowNotDone_Unchecked"/>
                </Grid>
            </StackPanel>

            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Top" Grid.Row="0" Grid.RowSpan="2" TextWrapping="Wrap" FontSize="30" FontWeight="Bold" Foreground="#F5F5F5" Width="123" Margin="0,20,0,0">Заметки</TextBlock>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.RowSpan="2" Width="600" VerticalAlignment="Top" Margin="0,80,0,0">
                <!--Titles-->
                <Border Background="#66A5AD" CornerRadius="12" Width="600" Padding="17 15 5 15">
                    <Grid Height="36">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="435*"/>
                                    <ColumnDefinition Width="233*"/>
                                </Grid.ColumnDefinitions>

                                <fa:ImageAwesome Icon="Pencil" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25"/>
                                <TextBlock x:Name="lblNote" Style="{StaticResource ResourceKey=txtHint}" MouseDown="lblNote_MouseDown" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Text="Добавить заметку" Margin="10,10,0,0"/>
                                <TextBox x:Name="txtNote" Style="{StaticResource ResourceKey=textBox}" TextChanged="txtNote_TextChanged" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="10,10,14,0"/>

                            </Grid>
                        </StackPanel>

                        <Button Style="{StaticResource button}" Width="35" Height="35" HorizontalAlignment="Right" Margin="0,0,55,0" Click="Button_Click">
                            <fa:ImageAwesome Icon="image" Height="25" Width="18"/>
                        </Button>
                        <TextBlock HorizontalAlignment="Right" Margin="0,0,55,-15" >
                            <TextBox Visibility="Hidden" Name="imagePath"/>
                        </TextBlock>

                        <Button Style="{StaticResource button}" Name="FileUpload" Width="35" Height="35" HorizontalAlignment="Right" Margin="0,0,28,0" Click="FileUpload_Click">
                            <fa:ImageAwesome x:Name="fileUpload" Icon="PaperClip" Height="18" Width="19"/>
                        </Button>
                        <TextBlock HorizontalAlignment="Right" Width="20" Height="20" Margin="0,50,28,0" >
                            <TextBox Visibility="Hidden" Name="fileName"/>
                        </TextBlock>

                        <Button Style="{StaticResource button}" Name="BtnAdd" Width="35" Height="35" HorizontalAlignment="Right" Margin="12,0,0,0" Click="BtnAdd_Click">
                            <fa:ImageAwesome Icon="PlusCircle" Width="18" Height="18"/>
                        </Button>


                    </Grid>

                </Border>


            </StackPanel>
        </Grid>
    </Border>
</Page>
