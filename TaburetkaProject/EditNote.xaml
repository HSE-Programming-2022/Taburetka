<Window x:Class="TaburetkaProject.EditNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaburetkaProject"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="EditNote" Height="auto" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">

            <TextBlock Text="Описание:" FontWeight="Bold"/>
            <TextBox Grid.ColumnSpan="2" Name="Description" Text="{Binding Path=Description, Mode=TwoWay}"/>

            <TextBlock Text="Изображение:" Grid.Column="0" Width="100" HorizontalAlignment="Left" FontWeight="Bold"/>
            <Button Style="{StaticResource button}" Width="32" Height="35" VerticalAlignment="Top" Name="ImageUpload" HorizontalAlignment="Right" Click="ImageUpload_Click">
                <fa:ImageAwesome Icon="image" Height="25" Width="18"/>
            </Button>
            <TextBox Name="ImageSource" Text="{Binding Path=ImageSource, Mode=TwoWay}"/>

            <TextBlock Text="Файл:" FontWeight="Bold" Grid.ColumnSpan="1" Grid.Column="0"/>
            <Button Style="{StaticResource button}" Name="FileUpload" Grid.ColumnSpan="1" Grid.Column="1" Width="35" Height="35" HorizontalAlignment="Right"  Click="FileUpload_Click">
                <fa:ImageAwesome x:Name="fileUpload" Icon="PaperClip" Height="18" Width="19"/>
            </Button>
            <TextBox Name="FileSource" Text="{Binding Path=FileSource, Mode=TwoWay}"/>
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button IsDefault="True" Name="Save" Grid.Column="0" Click="Save_Click">OK</Button>
                <Button IsCancel="True" Name="Cancel" Grid.Column="2" Click="Cancel_Click">Cancel</Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
